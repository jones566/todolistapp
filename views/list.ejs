<!DOCTYPE html>
<html>
<head>
	<title>To Do list</title>
	<link rel="stylesheet" type="text/css" href="css/styles.css">
	
</head>
<body>
	<div class="box" id="heading"><h1><%= listTitle %></h1></div>
	<div class="box">
		<%newListItems.forEach((items) => {%>
	  <form  action="/delete" method="post">
		<div class="item">
		<input type="checkbox" name="checkbox" value="<%= items._id %>" onchange = "this.form.submit()">	
		  <p><%= items.name %></p>
	    </div>
	    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
	   </form>
	<%});%>
<form action="/" method="post" class="item">
    	<label for="addAToDoList">To do: </label>
    		<input type="text" name="newItem" placeholder="addAToDoList" autocomplete="off" required>
    	<button type="submit" name="list" value= <%= listTitle %> >+</button>
    </form>
    </div>  
</body>
</html>